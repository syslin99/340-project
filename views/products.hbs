<div hidden class="modal-container" id="modal-container-products">
    <div class="confirmation-modal" id="confirmation-modal-products">
        <form class="conf-container" id="confirmation-container">
            <h3>Are you sure you would like to delete this entry?</h3>
            <div>
                <input type="submit" class="button" value="Confirm">
                <input type="reset" class="button" value="Cancel" onclick="deleteModalCancel()"> 
            </div>
        </form>
    </div>
</div>


<div class="content">
    <h1 class="page-title">Products</h1>
    
    {{!-- CRUD operation forms --}}
    <div class="operation-grouping">

        {{!-- Form to Add Products --}}
        <div id = "add_grouping" class="add-grouping">
            <legend><strong>Add Product</strong></legend>
                <fieldset>
                    <form id='add-product-form'>
                        {{!-- Name --}}
                        <label for='input-name'>Name:</label> 
                        <input type='text' name='input-name' id='input-name' required>
                        {{!-- Price --}}
                        <label for='input-price'>Price:</label>
                        <input type='number' min='0' step='0.01' name="input-price" id='input-price' required>
                        {{!-- Stock --}}
                        <label for='input-stock'>Stock:</label>
                        <input type='number' min='0' name='input-stock' id='input-stock'>
                        {{!-- Type --}}
                        <label for='input-type'>Type:</label>
                        <select name='input-type' id='input-type' required>
                            <option value=''>Select a Type</option>
                            {{#each types}}
                            <option value='{{this.id_type}}'>{{this.description}}</option>
                            {{/each}}
                        </select>

                        <div class="add-operations">
                            <input type='submit' class='button' value='Add'>
                            <input type='reset' class='button' value='Cancel'>
                        </div>
                    </form>
                </fieldset>
        </div>
    
        {{!-- Form to Update Products --}}
        <div id = "update_grouping" class="update-grouping">
            <legend><strong>Update Product</strong></legend>
                <fieldset>
                    <form id='update-product-form'>
                        {{!-- ID --}}
                        <label for='input-id-update'>ID:</label>
                        <input type='number' name='input-id-update' id='input-id-update' oninput="populateUpGroupForm()" required>
                        {{!-- Name --}}
                        <label for='input-name-update'>Name:</label>
                        <input type='text' name='input-name-update' id='input-name-update' required>
                        {{!-- Price --}}
                        <label for='input-price-update'>Price:</label>
                        <input type='number' min='0' step='0.01' name='input-price-update' id='input-price-update' required>
                        {{!-- Stock --}}
                        <label for='input-stock-update'>Stock:</label>
                        <input type='number' min='0' name='input-stock-update' id='input-stock-update'>
                        {{!-- Type --}}
                        <label for='input-type-update'>Type:</label>
                        <select name='input-type-update' id='input-type-update' required>
                            <option value=''>Select a Type</option>
                            {{#each types}}
                            <option value='{{this.id_type}}'>{{this.description}}</option>
                            {{/each}}
                        </select>

                        <div class='update-operations'>
                            <input type='submit' class='button' value='Update'>
                            <input type='reset' class='button' value='Cancel'>
                        </div>
                    </form>
                </fieldset>
        </div>
    
        {{!-- Form to Delete Products --}}
        <div id = "delete_grouping" class="delete-grouping">
            <legend><strong>Delete Product</strong></legend>
                <fieldset>
                    <form id='delete-product-form' class='delete-fieldset'>
                        {{!-- ID --}}
                        <label for='input-id-delete'>ID:</label>
                        <input type='number' class='input-id-delete' name='input-id-delete' id='input-id-delete' oninput='populateForm()' required>
                        {{!-- Name --}}
                        <label class='delete-group-labels'>Name:</label>
                        <p id='delete-name'></p>
                        {{!-- Price --}}
                        <label class='delete-group-labels'>Price:</label>
                        <p id='delete-price'></p>
                        {{!-- Stock --}}
                        <label class='delete-group-labels'>Stock:</label>
                        <p id='delete-stock'></p>
                        {{!-- Type --}}
                        <label class='delete-group-labels'>Type:</label>
                        <p id='delete-type'></p>
                    
                        <div class='delete-operations'>
                            <input type='submit' class='button' value='Delete'>
                            <input type='reset' class='button' value='Cancel'>
                        </div>
                    </form>
                </fieldset>
        </div>

    </div>

    {{!-- Display Products Table --}}
    <div class="table-grouping">
        <div class="table-pd">
            <table id="products-table">
                {{!-- Header --}}
                <tr class="table-header">
                    <th class="table-header table-header-left">ID</th>
                    <th class="table-header">Name</th>
                    <th class="table-header">Price</th>
                    <th class="table-header">Stock</th>
                    <th class="table-header-end table-header-right">Type</th>
                </tr>
                {{!-- Body --}}
                {{#each data}}
                <tr data-value={{this.id_product}}>
                    <td>{{this.id_product}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.type}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>

</div>


{{!-- Embed JS to handle DOM manipulation and AJAX request --}}
<script src='./js/add_product.js'></script>
<script src='./js/update_product.js'></script>
<script src='./js/delete_product.js'></script>
